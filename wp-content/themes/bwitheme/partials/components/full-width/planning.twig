<section class="plan theme_white">
	<div class="row">
		<div class="plan_callout">
			{% include "../shared/background.twig" with {
				class: "plan",
				image: 3,
				sources: {
					"0px": img.square.sml,
					"740px": img.square.med,
				}
			} %}
			<div class="plan_callout_body">
				<h4 class="plan_callout_title">BWI Parking Options</h4>
				<h5 class="plan_callout_caption">It’s now easier to park than ever!</h5>
				<p class="plan_callout_description">It’s easier to park than ever. We have four great options to provide you with the most convenient fit!</p>
				<a class="plan_callout_link" href="">
					<span>View Map</span>
					{{site.symbol("arrow_right", "gray")}}
				</a>
			</div>
		</div>
		<div class="plan_body">
			<header class="plan_header">
				<div class="plan_ribbon">
					{{site.symbol(symbol, "red")}}
				</div>
				<div class="plan_heading">
					<h2 class="plan_title">{{title}}</h2>
				</div>
			</header>
			<div class="plan_items">
				{% for item in items %}
					<div class="plan_item">
						<h4 class="plan_item_title">{{item.title}}</h4>
						<h5 class="plan_item_caption">{{item.caption}}</h5>
					</div>
				{% endfor %}
			</div>
			<footer class="plan_details">
				<p class="plan_caption">{{caption}}</p>
				<a class="plan_link" href="">
					<span>View Map</span>
					{{site.symbol("arrow_right", "red")}}
				</a>
			</footer>
		</div>
	</div>
</section>
